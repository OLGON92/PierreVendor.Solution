@{
  Layout = "_Layout";
}

@using PierreVendor.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>No vendors have been added yet!</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h2><a href='/vendors/@vendor.Id'>@vendor.NameOfVendor</a></h2>
  <div id="vendInfo2">
    <p>Description of vendor: @vendor.DescripOfVendor</p>
  </div>
}

<div id=homeAddVend>
  <p><a href='/'>Back home</a></p>
  <p><a href='/vendors/new'>Click to Add Vendor</a></p>
</div>