@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.NameOfVendor</h1>

<form action="/vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderTitle">Title of order:</label>
  <input id="orderTitle" name="orderTitle" type="text">
  <label for="orderDescrip">Description of order:</label>
  <input id="orderDescrip" name="orderDescrip" type="text">
  <label for="orderPrice">Total cost of order:</label>
  <input id="orderPrice" name="orderPrice" type="number">
  <label for="date">Date of order:</label>
  <input id="date" name="date" type="date">
  <button type='submit'>Add Item</button>
</form>